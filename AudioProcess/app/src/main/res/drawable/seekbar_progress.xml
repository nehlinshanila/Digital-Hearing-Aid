<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <size android:width="12dp" android:height="12dp" />
            <corners android:radius="15dp" /> <!-- Set the desired corner radius -->
            <solid android:color="#CCCCCC" /> <!-- Set the background color -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dp" /> <!-- Set the desired corner radius -->
<!--                <solid android:color="#FF0000" /> &lt;!&ndash; Set the progress color &ndash;&gt;-->
                <gradient
                    android:endColor="#fff"
                    android:startColor="#AE56DD"
                    android:useLevel="true" />
            </shape>
        </clip>
    </item>
</layer-list>
