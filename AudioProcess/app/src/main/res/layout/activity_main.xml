<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <!-- Volume control SeekBar -->


    <ImageView
        android:layout_width="197dp"
        android:layout_height="249dp"
        android:layout_marginLeft="200dp"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:src="@drawable/eear"

        />


    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190sp"

        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/seekbar_progress"
        android:rotation="270"
        android:thumb="@drawable/seekbar_thumb" />

    <TextView
        android:id="@+id/tvAmplitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amplitude: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvVolume"
        android:layout_width="149dp"
        android:layout_height="37dp"
        android:layout_below="@+id/volumeSeekBar"
        android:text="Volume: 0.0"
        android:layout_marginTop="180dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvAmplification"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvVolume"
        android:text="amplification: 0.0"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tvAmplification"
        android:text="Start Recording" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Stop Recording"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnStart"
        android:enabled="false" />



</RelativeLayout>
